<ul>
  <% if @errors %>
  <% @errors.each do |error|%>
    <li><%= error %></li>
    <% end %>
   <% end %>
</ul>

<form action="/login" method="post">
  <label for="email">Email:</label>
    <input type="text" name="email">
  <label for="password">Password:</label>
    <input type="password" name="password">
  <input type="submit" value="Login">
</form>
